#0. Write a C++ program to add two integer arrays and print the output array.


#include <iostream>
using namespace std;

int main() {
    const int size = 5; // Size of the arrays
    int arr1[size], arr2[size], sum[size]; 

    cout << "Enter " << size << " elements for the first array: ";
    for (int i = 0; i < size; ++i) {
        cin >> arr1[i];
    }

    cout << "Enter " << size << " elements for the second array: ";
    for (int i = 0; i < size; ++i) {
        cin >> arr2[i];
    }

    for (int i = 0; i < size; ++i) {
        sum[i] = arr1[i] + arr2[i];
    }

    cout << "Sum of the two arrays: ";
    for (int i = 0; i < size; ++i) {
        cout << sum[i] << " ";
    }
    cout << endl;

    return 0;
}
